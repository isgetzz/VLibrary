<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- 默认主题，没有标题栏 -->
    <style name="Base_AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--用于默认操作栏的背景-->
        <item name="colorPrimary">@color/base_colorTheme</item>
        <!-- 主要用于状态栏-->
        <item name="colorPrimaryDark">@color/base_colorTheme</item>
        <!--用于色彩控制器的默认值，用来给小部件着色-->
        <item name="colorAccent">@color/base_gray</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/base_background</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/base_white</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="base_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/base_dialog_out</item>
    </style>

    <style name="base_bottom_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_anim_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_push_bottom_out</item>
    </style>

    <style name="base_top_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_anim_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_push_up_out</item>
    </style>

    <style name="base_fadein_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_anim_fadein_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_fadein_out</item>
    </style>

    <style name="base_right_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_anim_slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_slide_right_out</item>
    </style>

    <style name="base_left_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/base_anim_slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_slide_left_out</item>
    </style>

    <!--水平分割线样式-->
    <style name="base_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layerType">software</item>
    </style>

    <!--水平分割线样式 粗-->
    <style name="base_line_horizontal_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layerType">software</item>
    </style>

    <!--水平分割线样式 粗-->
    <style name="base_line_horizontal_bold_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layerType">software</item>
    </style>


    <!-- 垂直分割线-->
    <style name="base_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layerType">software</item>
    </style>

    <!-- 垂直分割线-->
    <style name="base_line_vertical_bold">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layerType">software</item>
    </style>


</resources>
